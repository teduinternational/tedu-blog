@{
    ViewData["Title"] = "Post list";
    ViewData["Description"] = "Post list";

}
@model ListPostByUserViewModel
<!-- Page Header-->
<header class="masthead" style="background-image: url('/assets/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Post list</h1>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content-->
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <table class="table table-borderless">
                <tr>
                    <th>Total posts</th>
                    <th>Total draft posts</th>
                    <th>Total waiting posts</th>
                    <th>Total published posts</th>
                    <th>Total unpaid amount</th>
                    <th>Total paid posts</th>
                </tr>
                <tr>
                    <td>@Model.TotalPosts</td>
                    <td>@Model.TotalDraftPosts</td>
                    <td>@Model.TotalWaitingApprovalPosts</td>
                    <td>@Model.TotalPublishedPosts</td>
                    <td>@Model.TotalUnpaidPosts</td>
                    <td>@Model.TotalPaidAmount</td>
                </tr>
            </table>
        </div>

    </div>
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-12 col-lg-12 col-xl-12">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>View Count</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                  
                   
                </thead>
                <tbody>
                    @foreach (var item in Model.Posts.Results)
                    {
                        <tr>
                            <td><a href="@UrlConsts.CreatePost?id=@item.Id">@item.Name</a></td>
                            <td>@item.CategoryName</td>
                            <td>@item.DateCreated</td>
                            <td>@item.ViewCount</td>
                            <td>@item.Status</td>
                            <td>
                                <a class="btn btn-success" href="@UrlConsts.SendApprovalPost">Send to approval</a>
                            </td>
                        </tr>
                    }

                </tbody>
              
            </table>
            @(await Component.InvokeAsync("Pager", Model.Posts))
        </div>
    </div>
</div>